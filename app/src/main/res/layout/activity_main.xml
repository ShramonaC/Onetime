<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@drawable/oneback" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <!-- Name Label -->
            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="25dp"
                android:singleLine="true"
                android:textColor="#FFBBCBEC"
                android:textSize="18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="right"
                android:orientation="horizontal">

            <Button
                android:id="@+id/addcmpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFBBCBEC"
                android:onClick="onClick"
                android:text="Add Company" />
            <Button
                android:id="@+id/addc"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_input_add"
                android:onClick="Onadd"
                />
                </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4000dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.16">


                    <EditText
                        android:id="@+id/ComName"
                        android:layout_width="200dp"
                        android:textColor="#FFBBCBEC"
                        android:hint="Company Name"
                        android:textColorHint="#FFBBCBEC"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                <EditText android:id="@+id/ComSec"
                    android:textColor="#FFBBCBEC"
                    android:textColorHint="#FFBBCBEC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Company Sector"
                    android:layout_marginBottom="10dip"/>

                    <EditText
                        android:id="@+id/ComSco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:hint="Company score"
                        android:textColorHint="#FFBBCBEC"
                        android:textColor="#FFBBCBEC"
                        android:layout_gravity="right"
                        android:paddingLeft="50dp" />

                </LinearLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFBBCBEC"
                    android:id="@+id/lView"
                   />
            </LinearLayout>
        </LinearLayout>

</ScrollView>